@model IEnumerable<WebApplication8.Models.KullaniciTakip>

@{
    ViewBag.Title = "Takip Edilen Kullanıcılar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.kullaniciNick)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.kullaniciNick)
        </td>
        <td>
             @Html.ActionLink("Takip Bırak", "TakipBirak", new { takipEdilenId = item.kullaniciId })
        </td>
    </tr>
}

</table>
